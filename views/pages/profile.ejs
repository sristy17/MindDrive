    <!-- Sign Up Form -->
    <div class="flex justify-center items-center min-h-screen bg-gray-100">
      <form
        id="signupForm"
        method="post"
        class="bg-white shadow-lg rounded-lg p-8 w-[80%] max-w-md"
      >
        <h2
          class="text-3xl font-bold text-center mb-4 text-gray-800"
          onclick="toggleForm()">
          Sign Up
        </h2>
        <p class="text-center text-sm text-gray-600 mb-6">
          Already have an account?
          <a
            class="underline text-blue-500 hover:text-blue-700"
            onclick="toggleForm()"
            >Sign In</a
          >
        </p>

        <!-- Username Input -->
        <div class="mb-6">
          <label 
          for="username" 
          class="block text-gray-700 font-semibold mb-2"
            >Username</label
          >
          <input
            type="text"
            id="username"
            name="username"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-shadow duration-200"
            placeholder="Enter your username"
          />
        </div>

        <!-- Password Input -->
        <div class="mb-6">
          <label 
          for="password" 
          class="block text-gray-700 font-semibold mb-2"
            >Password</label
          >
          <input
            type="password"
            id="password"
            name="password"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-shadow duration-200"
            placeholder="Enter your password"
          />

        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-[#7C3AED] text-white py-3 rounded-lg font-semibold hover:ring-opacity-80 active:bg-[#4C1D95] hover:shadow-lg transition-all duration-300 focus:ring-4 focus:ring-purple-300 focus:ring-opacity-50"
        >
          Submit
        </button>
      </form>

      <!-- Sign In Form -->
      <form
        id="signInForm"
        method="post"
        class="bg-white shadow-lg rounded-lg p-8 w-[80%] max-w-md"
        style="display: none"
      >
        <h2
          class="text-3xl font-semibold text-center mb-4 text-gray-800"
          onclick="toggleForm()">
          Sign In
        </h2>
        <p class="text-center text-sm text-gray-600 mb-6">
          Don't have an account?
          <a
            class="underline text-blue-500 hover:text-blue-700"
            onclick="toggleForm()"
            >Sign Up</a
          >
        </p>

        <!-- Username Input -->
        <div class="mb-6">
          <label
            for="signIn-username"
            class="block text-gray-700 font-semibold mb-2"
            >Username</label
          >
          <input
            type="text"
            id="signIn-username"
            name="username"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-shadow duration-200"
            placeholder="Enter your username"
          />
        </div>

        <!-- Password Input -->
        <div class="mb-6">
          <label
            for="signIn-password"
            class="block text-gray-700 font-semibold mb-2"
            >Password</label
          >
          <input
            type="password"
            id="signIn-password"
            name="password"
            class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-shadow duration-200"
            placeholder="Enter your password"
          />
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-[#7C3AED] text-white py-3 rounded-lg font-semibold hover:ring-opacity-80 active:bg-[#4C1D95] hover:shadow-lg transition-all duration-300 focus:ring-4 focus:ring-purple-300 focus:ring-opacity-50"
        >
          Submit
        </button>
      </form>
