        <div class="eyeL"></div>
        <div class="eyeR"></div>
        <div class="hairs"></div>
        <div class="nose"></div>
        <div class="mouth"></div>
        <div class="smileL">
          <svg xml:space="preserve" viewBox="0 0 65 65" xmlns="http://www.w3.org/2000/svg">
